{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-xs-12">
        <a href="{{ path('serie_index') }}" class="btn btn-primary btn-lg">Back to the list</a>
    </div>
    <div class="row">
    <div class="col-xs-12 col-sm-3">
        <div class="thumbnail">
            <img src="{{ serie.picture[0].url }}" alt="{{ serie.picture[0].alt }}" />
        </div>
    </div>
    <div class="col-xs-12 col-sm-7">
        <p class="text-center block biggest"><strong>{{ serie.name }}</strong></p>
    </div>
    <div class="col-xs-12 col-sm-2 ">
        <div class="block badger-right badger-inverse box-primary text-center" data-badger="Language" >
            <span class="bigger"> {{ serie.language.sName }}</span>
        </div>
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="block badger-left badger-inverse" data-badger="Description">
            <p class="description">{{ serie.description }}</p>
        </div>
    </div>
    <div class="col-xs-6 col-sm-2 ">
        <div class="block text-center" >
            <h3>{{ nbSaisons }} <small>Saisons</small></h3>
        </div>
    </div>
    <div class="col-xs-6 col-sm-2 ">
        <div class="block text-center" >
            <h3>{{ serie.episodes|length }} <small>Episodes</small></h3>
        </div>
    </div>
    <div class="col-xs-6 col-sm-5 ">
        <div class="block text-center" >
            <h3>Vide...</h3>
        </div>
    </div>
    <div class="hidden-xs col-sm-9">
        <div class="block">
            <div class="row">
                <div class="col-sm-2">
                    <div class="list-group">
                        {% for i in 1..nbSaisons %}
                            <a href="#saison-{{ i }}" id="#saison-{{ i }}-tab" data-toggle="tab" aria-controls="saison-{{ i }}">
                                <button type="button" class="list-group-item">Saison {{ i }}</button>
                            </a>

                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm-10">
                    <div id="myTabContent" class="tab-content">
                        {% set current_saison = -1 %}
                        {% for episode in serie.episodes %}
                        {% if episode.saison != current_saison %}
                        {% if current_saison != -1 %}
                    </div>
                    {% endif %}
                    {% set current_saison = episode.saison %}
                    <div role="tabpanel" class="tab-pane fade" id="saison-{{ current_saison }}" aria-labelledby="saison-{{ current_saison }}">
                        {% endif %}
                        <p>{{ episode.episodeNumber}} - {{ episode.name }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_MODERATOR') %}
        <div class="col-xs-6 col-sm-3">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger btn">
            {{ form_end(delete_form) }}
        </div>
    {% endif %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="col-xs-6 col-sm-3 pull-right text-right">
            <a href="{{ path('serie_edit', { 'id': serie.id }) }}" class="box btn btn-warning"><i class="fa fa-pencil"></i> Edit</a>
            <button class="btn btn-primary"><i class="fa fa-eye"></i> Follow </button>
        </div>
    {% endif %}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="block badger-right badger-info" data-badger="Critiques">
                bientôt bientôt ...
            </div>
        </div>
    </div>
{% endblock %}
