{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <a href="{{ path('serie_index') }}" class="btn btn-bc">Séries</a>
    <a href="#" class="btn btn-bc">{{ serie.name }}</a>
{% endblock %}

{% block body %}
    <div class="col-xs-12">
        <a href="{{ path('serie_index') }}" class="btn btn-primary btn-lg">Back to the list</a>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-3">
            <div class="thumbnail">
                <img src="{{ asset(serie.picture[0].url) }}" alt="{{ serie.picture[0].alt }}" />
            </div>
            <div class="text-center col-xs-6" >
                <div class="block">
                    <h3>{{ nbSaisons }} <small>Saisons</small></h3>
                </div>
            </div>
            <div class="text-center col-xs-6" >
                <div class="block">
                    <h3>{{ serie.episodes|length }} <small>Episodes</small></h3>
                </div>
            </div>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="col-xs-6">
                    <a href="{{ path('serie_edit', { 'id': serie.id }) }}" class="btn btn-warning btn-block bigger"><i class="fa fa-pencil"></i> Edit</a>
                </div>
                <div class="col-xs-6">
                    {% if app.user.isFollow(serie) %}
                        <a href="{{ path('serie_follow',{'serie':serie.id}) }}" class="btn btn-info btn-block bigger"><i class="fa fa-eye-slash"></i> UnFollow</a>
                    {% else %}
                        <a href="{{ path('serie_follow',{'serie':serie.id}) }}" class="btn btn-primary btn-block bigger"><i class="fa fa-eye"></i> Follow</a>
                    {% endif %}
                </div>
            {% endif %}
            {% if is_granted('ROLE_MODERATOR') %}
                <div class="col-xs-6">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-danger btn">
                    {{ form_end(delete_form) }}
                </div>
            {% endif %}

        </div>
        <div class="col-xs-12 col-sm-7">
            <p class="text-center block biggest"><strong>{{ serie.name }}</strong></p>
        </div>
        <div class="col-xs-12 col-sm-2 ">
            <div class="block badger-right badger-inverse box-primary text-center" data-badger="Language" >
                <span class="bigger"> {{ serie.language.sName }}</span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-9">
            <div class="block badger-left badger-inverse" data-badger="Description">
                <p class="description">{{ serie.description }}</p>
            </div>
        </div>
        <div class="hidden-xs col-sm-9">
            <div class="block" >
                <div class="row">
                    <div class="col-sm-2">
                        <div class="list-group">
                            {% for i in 1..nbSaisons %}
                                <a href="#saison-{{ i }}" id="#saison-{{ i }}-tab" data-toggle="tab" aria-controls="saison-{{ i }}">
                                    <button type="button" class="list-group-item">Saison {{ i }} <span class="label label-info pull-right">0/18</span></button>
                                </a>

                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <div id="myTabContent" class="tab-content">
                            {% set current_saison = -1 %}
                            {% for episode in serie.episodes %}
                            {% if episode.saison != current_saison %}
                            {% if current_saison != -1 %}
                        </div>
                        {% endif %}
                        {% set current_saison = episode.saison %}

                        <table role="tabpanel" id="saison-{{ current_saison }}" aria-labelledby="saison-{{ current_saison }}" class="table table-hover tab-pane fade">
                            {% endif %}
                            <tr>
                                <td>{{ episode.episodeNumber}} - {{ episode.name }}
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and app.user.isWatch(episode) %}
                                        <a href="{{ path('episode_watch',{'episode':episode.id}) }}">
                                            <span class="btn btn-info pull-right"><i class="fa fa-eye-slash"></i></span>
                                        </a>
                                    {% elseif is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <a href="{{ path('episode_watch',{'episode':episode.id}) }}">
                                            <span class="btn btn-primary pull-right"><i class="fa fa-eye"></i></span>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="block badger-right badger-info" data-badger="Critiques">
                bientôt bientôt ...
            </div>
        </div>
    </div>

    <style>

        table, table tbody, table tbody tr, table tbody tr td{
            min-width: 100%;
            display: table;
        }
        table tbody tr td{
            min-height: 30px !important;
        }

    </style>

{% endblock %}
