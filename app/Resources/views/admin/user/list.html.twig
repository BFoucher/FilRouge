{% extends ('::admin/layout.html.twig') %}

{% block admin_content %}
    <h3>List des utilisateurs</h3>
    <table class="table table-hover">
        <thead>
        <th>#</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th></th>
        </thead>
        {%  for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="label label-primary">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('fos_user_group_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}