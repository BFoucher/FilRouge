{% extends '::base.html.twig' %}

{% block body %}
    <div class="col-xs-12  col-sm-8 col-sm-offset-1" id="chat">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">On en parle:</h3>
            </div>
            <div class="panel-body text-center" id="chat-content">
                {% include 'tchat/content.html.twig' %}
            </div>
            <div class="panel-footer">
                {% if is_granted('ROLE_USER') %}
                    <div class="input-group col-xs-12 chat-input">
                        {{ form_start(form, {'attr': {'class': 'form-inline form-tchat'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.message, {'attr': {'class': 'form-control chat-input'}}) }}
                            <span class="input-group-btn">
                                <input type="submit" value="Go" class="btn btn-info" id="btn-send">
                              </span>
                        </div><!-- /input-group -->
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                {% else %}
                    <p>Connetez-vous pour poster.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}