{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <form action="{{ path("fos_user_registration_register") }}" method="post" class="fos_user_registration_register">
        <div class="col-sm-9 col-sm-offset-3">
            <h1>Crée un compte</h1>
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.lastName) }}
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_widget(form.firstName) }}
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_widget(form.username) }}
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_widget(form.plainPassword) }}
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_widget(form.email) }}
        </div>
        <div class="col-sm-9 col-sm-offset-3">
            {{ form_widget(form.birth) }}
        </div>
            {{ form_widget(form) }}
        <div class="col-sm-9 col-sm-offset-3">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />
        </div>
        {{ form_end(form) }}
</div>



